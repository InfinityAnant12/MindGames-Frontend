{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "services/**/*.ts",
    "types.ts",
    "constants.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.tsx",
    "public"
  ]
}
